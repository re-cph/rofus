<script type="module">
  document.addEventListener("scroll", function (e) {
    const hero = document.querySelector(".login-container");
    if (!hero) return;
    const bottomDrawer = document.querySelector(".bottomDrawer");
    if (!bottomDrawer) return;

    const top = hero.offsetTop;
    const height = hero.getBoundingClientRect().height;

    const visible = window.scrollY > top + height;

    if (visible) {
      bottomDrawer.classList.add("bottomDrawer__visible");
    } else {
      bottomDrawer.classList.remove("bottomDrawer__visible");
    }
  });
</script>

