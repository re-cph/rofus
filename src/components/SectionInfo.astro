---
import Button from "./Button.astro";
import SectionHeader from "./SectionHeader.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section role="region" aria-labelledby="about-rofus">
  <div class="container py-12">
    <SectionHeader id="about-rofus" primary>
      {t("sectionInfo.title").split("\n").map((line: string) => (
        <span class="block">{line}</span>
      ))}
    </SectionHeader>

    <div
      class="pt-10 md:pt-16 grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-20"
    >
      <div role="region" aria-labelledby={t("sectionInfo.section1.ariaLabel")} class="leading-relaxed">
        <h3 id="function" class="text-xl font-bold uppercase my-5">
          {t("sectionInfo.section1.question")}
        </h3>

        {t("sectionInfo.section1.answer").split("\n").map((line: string) => (
          <p>{line}</p>
        ))}
      </div>

      <div role="region" aria-labelledby={t("sectionInfo.section2.ariaLabel")} class="leading-relaxed">
        <h3 id="confidential" class="text-xl font-bold uppercase my-5">
          {t("sectionInfo.section2.question")}
        </h3>
        <p>
          {t("sectionInfo.section2.answer")}
        </p>
      </div>

      <div
        role="region"
        aria-labelledby={t("sectionInfo.section3.ariaLabel")}
        class="leading-relaxed space-y-5"
      >
        <h3 id="covered" class="text-xl font-bold uppercase my-5">
          {t("sectionInfo.section3.question")}
        </h3>
        <p>
          {t("sectionInfo.section3.answer")}
        </p>
        <p>
          <a href={t("sectionInfo.section3.link1.href")}
            ><strong>{t("sectionInfo.section3.link1.text")}</strong></a
          >
        </p>
        <p>
          <a href={t("sectionInfo.section3.link2.href")}
            ><strong>{t("sectionInfo.section3.link2.text")}</strong></a
          >
        </p>
      </div>

      <div role="region" aria-labelledby={t("sectionInfo.section4.ariaLabel")} class="leading-relaxed">
        <h3 id="regret" class="text-xl font-bold uppercase my-5">
          {t("sectionInfo.section4.question")}
        </h3>
        <p>
          {t("sectionInfo.section4.answer")}
        </p>
      </div>
    </div>

    <div class="text-center">
      <Button
        href="https://rofusweb.spillemyndigheden.dk/public/rofus/"
        className="my-10"
      >
        {t("sectionInfo.cta")}
      </Button>
      <p class="text-xs italic">
        {t("sectionInfo.notaBene")}
      </p>
    </div>
  </div>
</section>
